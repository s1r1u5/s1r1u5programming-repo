// main.c

#include <stdio.h>

int main ()
{
	float dim1, dim2, area;

	float findArea(float x, float y);

	printf("Enter First Dimension: ");										// Get User Input
	fflush(stdout);
	scanf("%d", &dim1);

	printf("Enter Second Dimension: ");
	fflush(stdout);
	scanf("%d", &dim2);

	area = findArea(dim1, dim2);

	printf("Area = %d", area);
	fflush(stdout);

	return 0;
}

float findArea(float x, float y)
{
	return x*y;
}
